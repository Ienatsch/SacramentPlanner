@page
@model SacramentPlanner.IndexModel

@{
    ViewData["Title"] = "Planner";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].WardBranch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].SabbathDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].ConductingLeader)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].OpenHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].OpenPrayer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].SacramentHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].SpeakerSacrament)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].ClosingHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].ClosingPrayer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Planner) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WardBranch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SabbathDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConductingLeader)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenPrayer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SacramentHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpeakerSacrament)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingPrayer)
            </td>
            <td>
                <a class="btn btn-sm btn-warning" asp-page="./Edit" asp-route-id="@item.PlannerID">Edit</a> <br />
                <a class="btn btn-sm btn-success" asp-page="./Details" asp-route-id="@item.PlannerID">Details</a> <br />
                <a class="btn btn-sm btn-danger" asp-page="./Delete" asp-route-id="@item.PlannerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
